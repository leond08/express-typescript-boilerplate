{
  "extends": [
    "eslint:recommended", 
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "ignorePatterns": ["dist/**/*.js"],
  "rules": {
    "quotes": [
      "error", 
      "single", 
      { "avoidEscape": true }
    ],
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ]
  }
}
